<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">


    <com.lidiwo.princeview.PrinceView
        android:id="@+id/pv_aaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_item_bg_selector"
        android:padding="15dp"
        app:pv_aboveLineLeftMargin="20dp"
        app:pv_aboveLineRightMargin="40dp"
        app:pv_aboveLine_visibility="visible"
        app:pv_arrowDrawable="@drawable/arrow_more"
        app:pv_arrowPadding="10dp"
        app:pv_belowLineLeftMargin="40dp"
        app:pv_belowLineRightMargin="20dp"
        app:pv_belowLine_visibility="visible"
        app:pv_drawablePadding="20dp"
        app:pv_leftDrawable="@drawable/photo_album"
        app:pv_left_text="相册"
        app:pv_left_textColor="@android:color/holo_green_light"
        app:pv_left_textSize="15sp"
        app:pv_lineColor="@android:color/black"
        app:pv_lineHeight="1dp"
        app:pv_rigth_text="非常十点多"
        app:pv_rigthText_paddingHorizontal="10dp"
        app:pv_rigthText_paddingVertical="5dp"
        app:pv_rigthText_background="@android:color/black"
        app:pv_rigth_textColor="#ff0000"
        app:pv_rigth_textSize="15sp" />

</LinearLayout>
